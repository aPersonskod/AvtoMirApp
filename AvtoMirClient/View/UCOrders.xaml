<UserControl x:Class="AvtoMirClient.View.UCOrders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AvtoMirClient.View"
             xmlns:viewModel="clr-namespace:AvtoMirClient.ViewModel"
             d:DataContext="{d:DesignInstance Type={x:Type viewModel:OrdersViewModel}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock>Заказы</TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <DataGrid></DataGrid>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Command="{Binding CmdNavigateMain}" Margin="5">Главное меню</Button>
        </StackPanel>
    </Grid>
</UserControl>
