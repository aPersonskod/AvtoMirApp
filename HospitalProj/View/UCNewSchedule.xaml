<UserControl x:Class="HospitalProj.View.UCNewSchedule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HospitalProj.View"
             xmlns:viewModel="clr-namespace:HospitalProj.ViewModel"
             d:DataContext="{d:DesignInstance Type={x:Type viewModel:NewScheduleViewModel}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Recording.Id}"/>
            <TextBox Text="{Binding Recording.Patient.Fio}"/>
            <TextBox Text="{Binding Recording.PlanDate}"/>
            <Button Command="{Binding CmdNavigateBack}">Закрыть</Button>
            <Button Command="{Binding CmdSave}">Сохранить</Button>
        </StackPanel>
    </Grid>
</UserControl>
